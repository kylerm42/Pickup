<form class="form-horizontal" role="form" action="<%= event.persisted? ? event_url(event) : events_url %>" method="POST" accept-charset="utf-8" >

	<% if event.persisted? %>
		<input type="hidden" name="_method" value="PATCH">
	<% end %>

	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group">
  	<label
      for="event_title">
      Type of event
    </label>
  	<input
      class="form-control"
      type="text"
      id="event_title"
      name="event[title]"
      value="<%= event.title %>">
  </div>

  <div class="form-group">
  	<label
      id="event_address">
      Address
    </label>
  	<input
      class="form-control"
      type="text"
      name="event[address]"
      id="event_address"
      value="<%= event.address %>">
  </div>

  <div class="form-group">
  	<label
      for="event_day">
      Day of event
    </label>
  	<select
      class="form-control"
      name="event[date]"
      id="event_day">
  		<% %w{Monday Tuesday Wednesday Thursday Friday Saturday Sunday}.each do |day| %>
  			<% if event.date == day %>
  				<option
            value="<%= day %>"
            selected>
            <%= day %>
          </option>
  			<% else%>
  				<option
            value="<%= day %>">
            <%= day %>
          </option>
  			<% end %>
  		<% end %>
  	</select>
  </div>

  <div class="form-group">
  	<label
      for="event_time">
      Time of event
    </label>
  	<input
      class="form-control"
      type="time"
      name="event[time]"
      id="event_time"
      value="<%= event.time %>">
  </div>

  <div class="form-group">
  	<label
      for="event_deets">
      Deets
    </label>
    <textarea
      class="form-control"
      id="event_deets"
      name="event[deets]"
      value="<%= event.deets %>">
    </textarea>
  </div>
	<button class="btn btn-primary btn-lg" type="submit">Create</button>
</form>