<form class="form-horizontal form-create" role="form" action="<%= event.persisted? ? event_url(event) : events_url %>" method="POST" accept-charset="utf-8" >

	<% if event.persisted? %>
		<input type="hidden" name="_method" value="PATCH">
	<% end %>

	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-group">
  	<label
      for="event_title">
      Type of event
    </label>
  	<input
      class="form-control"
      type="text"
      id="event_title"
      name="event[title]"
      value="<%= event.title %>">
  </div>

  <div class="form-group">
  	<label
      id="event_address">
      Address
    </label>
  	<input
      class="form-control"
      type="text"
      name="event[address]"
      id="event_address"
      value="<%= event.address %>">
  </div>

  <div class="form-group">
		<label for="event_day">Day of Event</label>
		<select name="event[date]" id="event_day">
			<% 7.times do |day| %>
					<option value="<%= day.days.from_now %>" selected >
						<%= day.days.from_now.strftime('%A') %>
					</option>
			<% end %>
		</select><br>
  </div>

  <div class="form-group">
		<label id="event_time">Event Time</label>
		<input type="time" name="time" id="event_time" step="1800"><br>
  </div>

  <div class="form-group">
  	<label
      for="event_deets">
      Deets
    </label>
    <textarea
      class="form-control"
      id="event_deets"
      name="event[deets]"
      value="<%= event.deets %>">
    </textarea>
  </div>
	<button class="btn btn-primary btn-lg" type="submit">Create</button>
</form>