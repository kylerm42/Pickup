<div id="row">
  <%= link_to "Back to events", events_url %>

  <h3><%= @event.title %></h3>
  <h4><%= @event.address %></h4>
  <p><%= @event.day_of_week %></p>
  <p><%= @event.time_around %></p>

  <!-- <p><%# @event.time_around %></p> -->
  <p><%= @event.deets %></p>


  <% attending = current_user.attendees.select{ |attendee| attendee.event_id == @event.id } %>

  <% unless attending.empty? %>
  	<%= button_to "I'm Out!", attendee_url(attending.first), method: :delete, class: "btn-lg btn-warning" %>
  <% else %>
  	<%= button_to "I'm In!", event_attendees_url(@event), class: "btn-lg btn-success"%>
  <% end %>

  <% if current_user.id == @event.creator_id %>
    <div class="change-event">
    	<p>
        <%= link_to "Edit Event", edit_event_url(@event) %> OR
        <%= button_to "Cancel Event", event_url(@event), method: :delete, class: "btn btn-danger btn-md" %>
      </p>
    </div>
  <% end %>
</div>
